<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/new_feed_fragment">
    <fragment android:id="@+id/new_feed_fragment"
        android:name="com.example.myapplication.home.view.NewsFeedListFragment"
        android:layout="@layout/fragment_news_feed">

        <action android:id="@+id/news_feed_to_news_detail_action"
        app:destination="@id/news_detail_fragment">
            <argument
                android:name="image_url"
                android:defaultValue=''
                app:argType="string" />
            <argument
                android:name="title"
                android:defaultValue=''
                app:argType="string" />
            <argument
                android:name="content"
                android:defaultValue=''
                app:argType="string" />
            <argument
                android:name="date"
                android:defaultValue=''
                app:argType="string" />
        </action>

    </fragment>

    <fragment android:id="@+id/news_detail_fragment"
        android:name="com.example.myapplication.home.view.NewsDetailFragment"
        android:layout="@layout/fragment_news_detail">
        <argument
            android:name="image_url"
            android:defaultValue=''
            app:argType="string" />
        <argument
            android:name="title"
            android:defaultValue=''
            app:argType="string" />
        <argument
            android:name="content"
            android:defaultValue=''
            app:argType="string" />
        <argument
            android:name="date"
            android:defaultValue=''
            app:argType="string" />
    </fragment>

</navigation>